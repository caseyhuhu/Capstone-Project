<% include ../src/partials/header.ejs %>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <br>
            <h1 style="text-align: center; color: #736D5C;">Clustering</h1>
            <br>
            <div class="card-deck">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title" style="text-align: center; color: #736D5C;">Cluster Tutorial</h5>
                        <h6 style="color: #B3AA8F;">Steps to cluster data:</h6>
                        <ol style="text-align: left; color: #B3AA8F;">
                            <li>Enter a company's ticker symbol</li>
                            <li>Click 'scrape' to enter the stock info into our CSV</li>
                            <li>Click cluster to see the cluster analysis of related companies</li>
                        </ol>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title" style="text-align: center; color: #736D5C;">Cluster Here</h5>
                        <br>
                        <form method="post" enctype="multipart/form-data" action='/scraping'>
                            <input type="text" name="symbol" placeholder="Stock Symbol">
                            <br><br>
                            <button title="Scrapes a company's stock data" href="/scraping" class="btn btn-dark btn-md my-0" type="submit">Scrape</button>
                        </form>     
                        <br>
                        <form method="post" enctype="multipart/form-data" action='/clustering'>
                        <button title="Clusters all uploaded companies" href="/clustering" class="btn btn-dark btn-md my-0" type="submit">Cluster</button>
                        </form>
                        <br>
                        <form method="post" enctype="multipart/form-data" action='/reset'>
                            <button title="Resets stock data and cluster files to original" href="/reset" class="btn btn-dark btn-md my-0" type="submit">Reset</button>
                        </form>
                        <br>
                    </div>
                </div>
                <br>
            </div>
        </div>
    </div>
</div>
<br>
